# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=20
DB_CONNECT_TIMEOUT=10

# Better-Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-here-minimum-32-characters
API_BASE_URL=https://your-api-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# Session Configuration (optional - defaults provided)
SESSION_EXPIRES_IN=604800  # 7 days in seconds
SESSION_UPDATE_AGE=86400   # 1 day in seconds

# Password Configuration (optional - defaults provided)
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128

# Environment
NODE_ENV=development