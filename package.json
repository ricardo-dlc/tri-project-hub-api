    "@types/node": "22.7.9",
    "aws-cdk": "2.1018.1",
    "electrodb": "^3.4.5",
    "jest": "^29.7.0",
    "pino": "^9.12.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
