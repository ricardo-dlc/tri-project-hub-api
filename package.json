{
  "name": "tri-project-hub-api",
  "version": "0.1.0",
  "bin": {
    "tri-project-hub-api": "bin/tri-project-hub-api.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk deploy",
    "deploy:dev": "cdk deploy -c stage=dev --require-approval never",
    "deploy:prod": "cdk deploy -c stage=prod",
    "synth": "cdk synth",
    "synth:dev": "cdk synth -c stage=dev",
    "synth:prod": "cdk synth -c stage=prod",
    "diff": "cdk diff",
    "diff:dev": "cdk diff -c stage=dev",
    "diff:prod": "cdk diff -c stage=prod",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "ts-node scripts/migrate.ts migrate",
    "db:status": "ts-node scripts/migrate.ts status",
    "db:push": "drizzle-kit push"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.883.0",
    "@aws-sdk/lib-dynamodb": "^3.883.0",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1018.1",
    "drizzle-kit": "^0.31.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.152",
    "aws-cdk-lib": "2.200.1",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.11",
    "constructs": "^10.0.0",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "electrodb": "^3.4.5",
    "esbuild": "^0.25.9",
    "postgres": "^3.4.7",
    "ulid": "^3.0.1"
  }
}
